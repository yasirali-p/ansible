- name: hostvars and groupvars
  hosts: server2
  tasks:
  - name: installing package
    dnf:
      name: '{{web_package}}
      state: present
  - name: enabling and starting 
    service:
      name: "{{web_service}}"
      enabled: yes
      state: started
  - name: copy files
    copy:
      src: index.html
      dest: "{{web_path}}
