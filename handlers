- name: handlers
  hosts: server1
  tasks:
    - name: nginx installation
      dnf:
        name: nginx
        state: present
    - name: start & enable nginx
      service:
        name: nginx
        enabled: yes
        state: started
    - name: change config of nginx
      template:
        src: nginx.conf.j2
        dest: /etc/nginx/conf.d/nginx.conf
      notify: reload nginx
  handlers:
    - name: reload nginx
      service:
        name: nginx
        state: reloaded   
