- name: handlers
  hosts: server2
  tasks:
  - name: nginx install
    apt:
      name: nginx
      state: present
  - name: start&enable nginx
    service:
      name: nginx
      enabled: yes
      state: start
  - name: change cf of nginx
    template:
      src: nginx.conf.j2
      dest: /etc/nginx/conf.d/
    notify: reload nginx
  handlers:
  - name: reload nginx
    service:
    name: nginx
    state: restart
