- name: condition
  hosts: server2
  tasks:
    - name: installing nginx
      dnf:
        name: nginx
        state: present
      when:
        - ansible_distribution == 'AlmaLinux'
        - ansible_os_family == 'RedHat'
    - name: enable and start nginx
      service:
        name: nginx
        enabled: yes
        state: started
      when:
        - ansible_distribution == 'AlmaLinux'
        - ansible_os_family == 'RedHat'
